<%- include("../partials/header") %>
	<div class="row">
		<h1 style="text-align: center">Edit <%= campground.name %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<input type="text" class="form-control" value="<%=campground.name%>" name="campground[name]">
				</div>
				<div class="form-group">
					<input type="number" class="form-control" value="<%=campground.price%>" name="campground[price]" min="500" step="100">
				</div>
				<div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="campground[image]" accept="image/*">
                </div>
				<div class="form-group">
					<input type="text" class="form-control" value="<%=campground.description%>" placeholder="Add Description" name="campground[description]">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block">Add it!</button>
				</div>
			</form>	
			<a href="/campgrounds">Go Back</a>
		</div>

<%- include("../partials/footer") %>